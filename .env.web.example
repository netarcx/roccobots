# RoccoBots Web Interface Configuration
# Copy this file to .env.web and fill in your values

# ============================================
# REQUIRED: Web Interface Settings
# ============================================

# Admin password for web dashboard (use a strong password!)
WEB_ADMIN_PASSWORD=your_secure_password_here

# Encryption key for storing credentials (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_64_character_hex_key_here

# ============================================
# REQUIRED: Twitter Login Credentials
# ============================================
# These credentials are used to authenticate with Twitter
# They can be shared across multiple bots

TWITTER_USERNAME=your_twitter_email@example.com
TWITTER_PASSWORD=your_twitter_password

# ============================================
# OPTIONAL: Web Server Settings
# ============================================

# Port for web server (default: 3000)
WEB_PORT=3000

# Database path (default: data.sqlite)
DATABASE_PATH=data.sqlite

# ============================================
# LEGACY: Bot Configuration via .env
# ============================================
# These are only needed if you're still using CLI mode
# In web mode, bots are configured through the dashboard

# Twitter handles to sync (add more with TWITTER_HANDLE1, TWITTER_HANDLE2, etc.)
# TWITTER_HANDLE=example_user

# Bluesky credentials
# BLUESKY_IDENTIFIER=example.bsky.social
# BLUESKY_PASSWORD=your-bluesky-password

# Mastodon credentials
# MASTODON_INSTANCE=mastodon.social
# MASTODON_TOKEN=your-mastodon-token

# Misskey credentials
# MISSKEY_INSTANCE=misskey.io
# MISSKEY_TOKEN=your-misskey-token

# Discord webhook
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/...

# Sync settings (default: true)
# SYNC_POSTS=true
# SYNC_PROFILE_DESCRIPTION=true
# SYNC_PROFILE_PICTURE=true
# SYNC_PROFILE_NAME=true
# SYNC_PROFILE_HEADER=true

# Sync frequency in minutes (default: 30)
# SYNC_FREQUENCY_MIN=30

# Run as daemon (default: true)
# DAEMON=true
